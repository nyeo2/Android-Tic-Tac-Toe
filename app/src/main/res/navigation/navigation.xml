<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.android.myapplication.ui.title.TitleFragment"
        android:label="TitleFragment"
        tools:layout="title_fragment">
        <action
            android:id="@+id/action_titleFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.android.myapplication.ui.main.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.android.myapplication.ui.title.AboutFragment"
        android:label="AboutFragment" />
</navigation>